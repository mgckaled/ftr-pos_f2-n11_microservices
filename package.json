{
	"name": "microservices-practical",
	"version": "1.0.0",
	"description": "Projeto prático de microsserviços - Fundamentos (Nível 11)",
	"private": true,
	"packageManager": "pnpm@10.23.0",
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write \"**/*.{ts,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,json,md}\"",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"docker:rebuild": "docker-compose down && docker-compose build && docker-compose up -d"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.9",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.9",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.1.9",
		"@nestjs/schedule": "^6.0.1",
		"@nestjs/swagger": "^11.2.3",
		"@nestjs/typeorm": "^11.0.0",
		"@scalar/nestjs-api-reference": "^1.0.8",
		"argon2": "^0.44.0",
		"axios": "^1.13.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3",
		"http-proxy-middleware": "^3.0.0",
		"ioredis": "^5.8.2",
		"jsonwebtoken": "^9.0.2",
		"jwks-rsa": "^3.2.0",
		"kafkajs": "^2.2.4",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"typeorm": "^0.3.27",
		"uuid": "^13.0.0",
		"winston": "^3.18.3",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@eslint/js": "catalog:",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.9",
		"@types/express": "^5.0.5",
		"@types/http-proxy": "^1.17.15",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.10.1",
		"@types/passport-jwt": "^4.0.1",
		"@types/uuid": "^11.0.0",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"eslint": "^9.39.1",
		"globals": "catalog:",
		"jest": "^30.2.0",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "catalog:"
	}
}
